<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Learn or Pay</title>
  </head>
  <body>
    <h1> You better learn, or else.</h1>

    <form action="/cards" method="POST">
      <input type="text" placeholder="front" name="front">
      <input type="text" placeholder="back" name="back">
      <button type="submit">Save</button>
    </form>

    <h2> Quotes </h2>

    <ul class="quotes">
      <!-- Loop through quotes -->
      <% for(var i = 0; i < quotes.length; i++) {%>
        <li class="quote">
          <!-- Output name from the iterated quote -->
          <span><%= quotes[i].name %></span>:
          <!-- Output quote from the iterated quote object -->

          <span><%= quotes[i].quote %></span>
        </li>
      <% } %>
    </ul>

  </body>
</html>
